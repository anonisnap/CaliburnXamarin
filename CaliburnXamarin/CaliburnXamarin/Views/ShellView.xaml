<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CaliburnXamarin.Views.ShellView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cal="clr-namespace:Caliburn.Micro.Xamarin.Forms;assembly=Caliburn.Micro.Xamarin.Forms">
    <ContentPage.Content>
        <StackLayout>
            <Label
                x:Name="PageInformation"
                HorizontalOptions="CenterAndExpand"
                Text="{Binding PageInformation}"
                VerticalOptions="CenterAndExpand" 
                Margin="0, 10"/>

            <Button 
                Text="Simple Button" 
                cal:Message.Attach="NavOtherButton" />

            <Button 
                Text="Singleton Button" 
                cal:Message.Attach="NavSingleton" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>